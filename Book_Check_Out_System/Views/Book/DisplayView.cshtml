@model Book_Check_Out_System.Models.Book

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Details</title>
    <style>
        body {
            background-color: #f5f5dc; 
        }

        table {
            border-collapse: collapse;
            border: 1px solid black;
            margin: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .positive {
            background-color: lightgreen; 
        }

        .negative {
            background-color: #ff6666; 
        }

        .zero {
            background-color: #ffff66;
        }
    </style>
</head>
<body>
    <h2>Book Details</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Page Number</th>
            <th>Due Date</th>
            <th>Remaining Time</th>
        </tr>
        <tr>
            <td>@Model.name</td>
            <td>@Model.author</td>
            <td>@Model.pageNumber</td>
            <td>@Model.dueDate</td>
            <td class="@(Model.remainingTime.TotalSeconds > 0 ? "positive" : (Model.remainingTime.TotalSeconds < 0 ? "negative" : "zero"))">@Model.remainingTime</td>
        </tr>
    </table>
</body>
</html>
